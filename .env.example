# ========================================
# EXEMPLO DE CONFIGURACAO - .env.local
# ========================================
# Copie este arquivo para .env.local e preencha os valores
# NUNCA commite o .env.local no git!

# ========================================
# OBRIGATORIOS - Database
# ========================================

# Neon PostgreSQL (neon.tech) ou Supabase
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ========================================
# OBRIGATORIOS - Autenticacao
# ========================================

# JWT Secret - gere um valor unico e forte
# Pode usar: openssl rand -base64 32
JWT_SECRET=seu-secret-muito-forte-aqui

# Google OAuth (console.cloud.google.com)
# Criar credenciais em: APIs & Services > Credentials > OAuth 2.0 Client IDs
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxx

# ========================================
# OBRIGATORIOS - Aplicacao
# ========================================

# URL base (sem barra no final)
# Local: http://localhost:3000
# Producao: https://calculamei.com.br
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# OBRIGATORIOS - Email (resend.com)
# ========================================

# Criar conta em resend.com e verificar dominio
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=Calcula MEI <noreply@calculamei.com.br>

# ========================================
# OBRIGATORIOS - Cron Jobs
# ========================================

# Secret para proteger endpoints de cron (gere um valor aleatorio)
# Pode usar: openssl rand -base64 32
CRON_SECRET=seu-cron-secret-aqui

# ========================================
# MONITORAMENTO - Sentry (sentry.io)
# ========================================

# DSN do projeto Sentry (Settings > Client Keys)
# Deixe vazio para desativar em desenvolvimento
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ========================================
# ANALYTICS - Google
# ========================================

# Google Analytics 4 (analytics.google.com)
# Admin > Data Streams > Web > Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# PAGAMENTOS - Stripe (stripe.com)
# ========================================

# Chave secreta (Dashboard > Developers > API keys)
# Use sk_test_xxx para testes, sk_live_xxx para producao
STRIPE_SECRET_KEY=sk_test_xxx

# Webhook secret (Dashboard > Developers > Webhooks)
# Endpoint: /api/billing/webhook
STRIPE_WEBHOOK_SECRET=whsec_xxx

# IDs do produto/preco Premium (Dashboard > Products)
# Criar produto "Calcula MEI Premium" com preco R$ 14,90/mes
NEXT_PUBLIC_STRIPE_PRODUCT_ID_PREMIUM=prod_xxx
NEXT_PUBLIC_STRIPE_PRICE_ID_PREMIUM=price_xxx

# ========================================
# MONETIZACAO - Google AdSense
# ========================================

# Publisher ID (adsense.google.com)
# Disponivel apos aprovacao do site
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-xxx

# Slot IDs dos anuncios (criar em Ads > By ad unit)
NEXT_PUBLIC_ADSENSE_SLOT_BANNER=xxx
NEXT_PUBLIC_ADSENSE_SLOT_INTERSTITIAL=xxx

# ========================================
# OPCIONAL - WhatsApp Business (Twilio)
# ========================================

# Para alertas de DAS via WhatsApp (Premium)
# Criar conta em twilio.com
# TWILIO_ACCOUNT_SID=ACxxx
# TWILIO_AUTH_TOKEN=xxx
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ========================================
# OPCIONAL - DAS Config Dinamico
# ========================================

# Permite sobrescrever valores do DAS sem deploy
# Formato JSON: {"2026":{"salarioMinimo":1518,"icms":1,"iss":5,"aliquotaMEI":0.05,"aliquotaCaminhoneiro":0.12}}
NEXT_PUBLIC_DAS_CONFIG=
