generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  name         String?
  avatarUrl    String?

  // OAuth providers
  provider     String   @default("email") // email, google
  providerId   String?  // ID do provedor OAuth

  emailVerified   Boolean  @default(false)
  emailVerifiedAt DateTime?

  tipoMEI            TipoMEI?
  cnpj               String?
  temFuncionario     Boolean   @default(false)
  faturamentoMedio   Float?
  ocupacao           String?

  plano              Plano     @default(FREE)
  stripeCustomerId   String?   @unique
  stripeSubscriptionId String? @unique
  stripePriceId      String?
  stripeCurrentPeriodEnd DateTime?

  // Trial Premium
  trialStartedAt     DateTime?
  trialEndsAt        DateTime?
  trialUsed          Boolean   @default(false)

  // Engajamento
  lastLoginAt        DateTime?
  lastActiveAt       DateTime?
  currentStreak      Int       @default(0)
  longestStreak      Int       @default(0)
  lastStreakDate     DateTime?
  reengagementSentAt DateTime?

  alertasEmail       Boolean   @default(true)
  alertasPush        Boolean   @default(true)
  alertasWhatsApp    Boolean   @default(false)
  whatsapp           String?

  calculos      Calculo[]
  alertas       Alerta[]
  sessions      Session[]
  subscription  Subscription?
  registrosFaturamento RegistroFaturamento[]
  pushSubscriptions PushSubscription[]
  badges        UserBadge[]
  milestones    UserMilestone[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([email])
  @@index([lastActiveAt])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  refreshToken String   @unique
  userAgent    String?
  ipAddress    String?

  expiresAt    DateTime
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([refreshToken])
  @@index([expiresAt])
}

model Calculo {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tipo      TipoCalculo
  inputs    Json
  resultado Json
  
  titulo    String?
  descricao String?
  formulaVersion String? @default("2026-01-27")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([tipo])
}

model Alerta {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tipo      TipoAlerta
  ativo     Boolean  @default(true)

  diasAntecedencia Int @default(7)
  ultimoEnvio      DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, ativo])
}

model Subscription {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  stripeSubscriptionId  String   @unique
  stripeCustomerId      String

  status                String   @default("active")
  currentPeriodStart    DateTime
  currentPeriodEnd      DateTime

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
  @@index([stripeSubscriptionId])
}

enum TipoMEI {
  COMERCIO
  SERVICOS
  MISTO
  CAMINHONEIRO
}

enum Plano {
  FREE
  PREMIUM
}

enum TipoCalculo {
  MARGEM_LUCRO
  PRECO_HORA
  PRECIFICACAO
  FATURAMENTO
  FLUXO_CAIXA
  CALENDARIO_DAS
  TRANSICAO_MEI_ME
  PONTO_EQUILIBRIO
  COMPARADOR_TRIBUTARIO
  ROI
}

enum TipoAlerta {
  DAS_VENCIMENTO
  FATURAMENTO_LIMITE
  ANUAL_DECLARACAO
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

// Registro mensal de faturamento - núcleo do sistema
model RegistroFaturamento {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  mes       Int      // 1-12
  ano       Int      // 2026
  valor     Float    // Valor faturado no mês

  notas     String?  // Observações opcionais

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, mes, ano]) // Um registro por mês/ano por usuário
  @@index([userId, ano])
}

// Push Notification Subscriptions
model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  endpoint  String   @unique
  p256dh    String   // Public key
  auth      String   // Auth secret

  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// Sistema de Badges/Conquistas
model Badge {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  icon        String   // Nome do icone Lucide
  category    BadgeCategory
  points      Int      @default(10)

  // Criterios para desbloquear (JSON com regras)
  criteria    Json

  createdAt   DateTime @default(now())

  users       UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  unlockedAt DateTime @default(now())
  notified   Boolean  @default(false)

  @@unique([userId, badgeId])
  @@index([userId])
}

// Marcos do usuario (celebracoes)
model UserMilestone {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      MilestoneType
  value     Float?        // Valor associado (ex: faturamento atingido)
  metadata  Json?         // Dados extras

  celebratedAt DateTime?  // Quando o usuario viu a celebracao
  createdAt    DateTime   @default(now())

  @@index([userId, type])
}

// Contadores parceiros (Marketplace)
model Contador {
  id          String   @id @default(cuid())
  nome        String
  email       String   @unique
  telefone    String?
  whatsapp    String?

  // Localizacao
  cidade      String
  estado      String
  cep         String?

  // Perfil
  especialidades String[] // ["MEI", "Simples Nacional", "Lucro Presumido"]
  bio         String?
  avatarUrl   String?
  website     String?

  // Status
  ativo       Boolean  @default(false)
  verificado  Boolean  @default(false)

  // Metricas
  visualizacoes Int    @default(0)
  contatos      Int    @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([estado, cidade])
  @@index([ativo, verificado])
}

// API Keys para API publica
model ApiKey {
  id          String   @id @default(cuid())
  userId      String

  name        String
  key         String   @unique
  hashedKey   String   @unique

  permissions String[] // ["read:calculos", "write:faturamento"]

  lastUsedAt  DateTime?
  expiresAt   DateTime?
  revokedAt   DateTime?

  requestCount Int     @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([hashedKey])
  @@index([userId])
}

enum BadgeCategory {
  ONBOARDING    // Badges de inicio
  CONSISTENCY   // Badges de consistencia
  MILESTONE     // Badges de marcos
  FINANCIAL     // Badges financeiros
  SOCIAL        // Badges sociais
  SPECIAL       // Badges especiais
}

enum MilestoneType {
  FIRST_REGISTRATION      // Primeiro registro
  FIRST_MONTH_COMPLETE    // Primeiro mes completo
  THREE_MONTHS_STREAK     // 3 meses seguidos
  SIX_MONTHS_STREAK       // 6 meses seguidos
  ONE_YEAR_STREAK         // 1 ano seguido
  HALF_LIMIT_REACHED      // 50% do limite
  SEVENTY_PERCENT_LIMIT   // 70% do limite
  LIMIT_WARNING           // 80% do limite
  FIRST_CALCULATION       // Primeiro calculo
  TEN_CALCULATIONS        // 10 calculos
  PREMIUM_UPGRADE         // Virou Premium
}
